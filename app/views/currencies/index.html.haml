.panel.panel-default
  .panel-heading
    %h1 Listing currencies
    .btn.btn-default= link_to 'New Currency', new_currency_path

  .panel-body
    %table.table-striped.table-bordered
      %thead
        %tr
          %th Name
          %th Code
          %th Country
          %th
          %th
          %th

      %tbody
        - @currencies.each do |currency|
          %tr
            %td= currency.name
            %td= currency.code
            %td= currency.country_name
            %td= link_to 'Show', currency
            %td= link_to 'Edit', edit_currency_path(currency)
            %td= link_to 'Destroy', currency, method: :delete, data: { confirm: 'Are you sure?' }

